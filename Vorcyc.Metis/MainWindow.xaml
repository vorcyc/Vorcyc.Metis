<Window x:Class="Vorcyc.Metis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vorcyc.Metis"
        mc:Ignorable="d"
        Title="Vorcyc Metis" SizeToContent="WidthAndHeight" ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen" Background="Transparent"
        WindowState="Normal"  ResizeMode="CanMinimize"  
        WindowStyle="None" AllowsTransparency="True" Opacity="0.9">

    <Window.Resources>
        <!-- Shared brushes to match window chrome -->
        <LinearGradientBrush x:Key="ChromeBorderBrush" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0" Color="#FFBABAB8" />
            <GradientStop Offset="1" Color="#FF777671" />
        </LinearGradientBrush>

        <!-- Base background similar to window -->
        <LinearGradientBrush x:Key="ChromeBg_Normal" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0"   Color="#F041413C" />
            <GradientStop Offset="0.5" Color="#FA2B2721" />
            <GradientStop Offset="0.5" Color="#FF24211A" />
            <GradientStop Offset="1"   Color="#FF232219" />
        </LinearGradientBrush>

        <!-- Hover and Pressed variants -->
        <LinearGradientBrush x:Key="ChromeBg_Hover" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Offset="0"   Color="#F05B5A54" />
            <GradientStop Offset="0.5" Color="#FA3A352E" />
            <GradientStop Offset="0.5" Color="#FF2D2922" />
            <GradientStop Offset="1"   Color="#FF2A291F" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ChromeBg_Pressed" StartPoint="0.5,1" EndPoint="0.5,0">
            <GradientStop Offset="0"   Color="#FF1A1913" />
            <GradientStop Offset="1"   Color="#FF221F18" />
        </LinearGradientBrush>

        <Style x:Key="ChromeButton" TargetType="Button">
            <Setter Property="Foreground" Value="#FFECEBE6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="MinWidth" Value="72"/>
            <Setter Property="Background" Value="{StaticResource ChromeBg_Normal}"/>
            <!--<Setter Property="BorderBrush" Value="{StaticResource ChromeBorderBrush}"/>-->
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="Chrome"
                                    CornerRadius="4"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <!-- subtle inner highlight -->
                                <Border CornerRadius="3" BorderThickness="0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" Opacity="0.15">
                                            <GradientStop Offset="0" Color="#FFFFFFFF"/>
                                            <GradientStop Offset="0.5" Color="#00FFFFFF"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>

                            <ContentPresenter x:Name="contentPresenter"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Chrome" Property="Background" Value="{StaticResource ChromeBg_Hover}"/>
                                <Setter TargetName="Chrome" Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Offset="0" Color="#FFF0F0EE"/>
                                            <GradientStop Offset="1" Color="#FF9B9A94"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Chrome" Property="Background" Value="{StaticResource ChromeBg_Pressed}"/>
                                <Setter TargetName="contentPresenter" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Chrome" Property="BorderBrush" Value="Gray"/>
                                <Setter TargetName="Chrome" Property="BorderThickness" Value="1"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" TargetName="Chrome" Value="0.5"/>
                                <Setter Property="Foreground" Value="#FF9A9994"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--像工具栏按钮的 ToggleButton-->
        <Style x:Key="SunkenToggleButton" TargetType="Button">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <!-- Use Foreground as the brush for Path.Fill -->
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="5"
                                Margin="0"
                                BorderThickness="1"
                                CornerRadius="4">
                            <!-- ContentPresenter passes Foreground down; Path must bind to it -->
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF3D3D3D"/>
                                <!-- Change Path fill via Foreground -->
                                <Setter Property="Foreground" Value="#FFFFD65C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="#FFFFA000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#FF7A7A7A"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    </Window.Resources>

    <Grid x:Name="LayoutRoot" MouseLeftButtonDown="LayoutRoot_MouseLeftButtonDown">
        <!--淡化边-->
        <Rectangle StrokeThickness="5" RadiusX="5" RadiusY="5" Margin="5">
            <!--<Rectangle.Effect>
                <BlurEffect KernelType="Box" />
            </Rectangle.Effect>-->
            <Rectangle.Stroke>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="0.8"/>
                    <GradientStop Offset="1" Color="Black" />
                </RadialGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>

        <Border CornerRadius="5" BorderThickness="2" Margin="5">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FFBABAB8" />
                    <GradientStop Offset="1" Color="#FF777671" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#D841413C" />
                    <GradientStop Offset="0.5" Color="#D82B2721" />
                    <GradientStop Offset="0.5" Color="#E524211A" />
                    <GradientStop Offset="1" Color="#E5232219" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>

                <!--<StackPanel Orientation="Horizontal" Height="40" Margin="5" Width="250" Grid.Column="0" Grid.RowSpan="2" VerticalAlignment="Center">
                    <Line />
                    <Button Content="设置" Style="{StaticResource ChromeButton}"/>
                    <Button Content="关于" Style="{StaticResource ChromeButton}"/>
                </StackPanel>-->


                <Grid Grid.Column="0" Grid.RowSpan="2" Margin="0">
                    <!-- Main content goes here -->

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>

                    <Button Style="{StaticResource SunkenToggleButton}" Grid.Column="0" Grid.Row="0" Margin="1"
                            VerticalAlignment="Bottom" VerticalContentAlignment="Bottom"
                            x:Name="btnPrevious" Click="btnPrevious_Click">
                        <Path HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Stretch="Fill"
                          Width="8"
                          Height="12"
                          Data="M169.4 41.4c12.5-12.5 32.8-12.5 45.3 0l160 160c9.2 9.2 11.9 22.9 6.9 34.9s-16.6 19.8-29.6 19.8l-96 0 0 184c0 22.1-17.9 40-40 40l-48 0c-22.1 0-40-17.9-40-40l0-184-96 0c-12.9 0-24.6-7.8-29.6-19.8s-2.2-25.7 6.9-34.9l160-160z"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    </Button>

                    <Button Style="{StaticResource SunkenToggleButton}" Grid.Column="0" Grid.Row="1" Margin="1"
                            x:Name="btnNext" Click="btnNext_Click">
                        <Path HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Stretch="Fill"
                          Width="8"
                          Height="12"
                          Data="M214.6 470.6c-12.5 12.5-32.8 12.5-45.3 0l-160-160c-9.2-9.2-11.9-22.9-6.9-34.9s16.6-19.8 29.6-19.8l96 0 0-184c0-22.1 17.9-40 40-40l48 0c22.1 0 40 17.9 40 40l0 184 96 0c12.9 0 24.6 7.8 29.6 19.8s2.2 25.7-6.9 34.9l-160 160z"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                    </Button>

                    <Border Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2" 
                            Height="50" Width="400" 
                            BorderBrush="#252525" BorderThickness="2" CornerRadius="3">

                    </Border>


                
                </Grid>


                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
                    <Image Source="/Images/min.png" Stretch="None" Margin="2,0,2,0" />
                    <Image Source="/Images/exit.png" Stretch="None" Margin="2,0,5,0" 
                           MouseEnter="Image_MouseEnter"
                           MouseLeave="Image_MouseLeave"
                           MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
                </StackPanel>
            </Grid>

        </Border>

    </Grid>
</Window>
